    <script language="javascript">
   
        /* Check regularly with the server if a customer has logged in */
        function on_update() {
           $.get("/", { type : "has-customer" }).done(function (data) {
               if (data.hasCustomer) {
                   window.location.href = "/html/welcome.html"; 
               }   
           }); 
        }
        
        $( document ).ready(function() { 
            update_interval = setInterval(function() { on_update(); }, 500); 
        });
        
    </script>
